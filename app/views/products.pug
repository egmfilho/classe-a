#carousel.carousel.slide(data-ride='carousel')
	//- Indicators
	ol.carousel-indicators
		li(data-target='#carousel' data-slide-to='{{$index}}' ng-class='{"active": $index === 0}' ng-repeat='n in getNumber(3) track by $index')

	//- Wrapper for Slides
	.carousel-inner(role='listbox')
		.item(ng-class='{"active": $index === 0}' ng-repeat='slide in product.slides track by $index')
			.cover
				div 
					h2 {{slide.title}}
					p {{slide.subtitle}}
			.picture(ng-style='{"background-image": "url(" + slide.imageUrl + ")"}')

	//- Controls
	a.left.carousel-control(data-target='#carousel' role='button' data-slide='prev')
		span.glyphicon.glyphicon-chevron-left
	a.right.carousel-control(data-target='#carousel' role='button' data-slide='next')
		span.glyphicon.glyphicon-chevron-right

